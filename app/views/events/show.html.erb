

<h4 class="h1 mt-3 mb-4 ml-3 text-center">Discover the event: <%= @event.title %></h4>
<container class="d-flex justify-content-around">
  <div class="card-deck mb-3 d-flex justify-content-between" style="width: 36rem;">
      <div class="card mx-4" style="width: 26rem;">
        <div class="card-body">
          <h5 class="card-title">Learn more about the event: '<%= @event.title %>'</h5>
          <h4 class="card-text mb-4"><small class="text-muted">Event description: <%= @event.description %></small></h4>
          <h4 class="card-text mb-4"><small class="text-muted">Location: <%= @event.location %></small></h4>
          <h4 class="card-text mb-4"><small class="text-muted">Duration in min: <%= @event.duration %></small></h4>
          <h4 class="card-text mb-4"><small class="text-muted">Price in â‚¬ : <%=  @event.price %></small></h4>
          <h4 class="card-text mb-4"><small class="text-muted">Start date: <%=  @event.start_date %></small></h4>
          <h4 class="card-text mb-4"><small class="text-muted">End date: <%=@event.start_date + @event.duration*60%></small></h4>
          <h5>Event created by: <%= @event.admin.email %></h5>
          <center>
          <%= link_to "See all my created events", user_path(current_user), :class => "btn btn-primary" %>
          <%= link_to "Join event", user_path(current_user), :class => "btn btn-primary" %>

          </div>
      </div>
    </div>

    </container>
  <br>

  <p class="lead mt-3 mb-4 ml-3 text-center"><%= link_to "Return to the homepage", root_path, :class => "btn btn-primary" %></p>