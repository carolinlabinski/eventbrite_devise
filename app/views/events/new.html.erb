<% if @event.errors.any? %>
<div class="alert alert-danger" role="alert">
  <br>
  <p>❌&nbsp;&nbsp;Nous n'avons pas réussi à créer l'événement pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<br>
</div>
<% end %>

<center>

    <%= form_tag events_path, method: "POST" do %>

<%= label_tag 'Event title:' %>
      <%= text_field_tag :title, params[:title]%>
      <br /> <br />
    
<%= label_tag 'Event description (min 20 characters):' %>
<%= text_field_tag :description, params[:description]%>
<br /> <br />

<%= label_tag 'Location:' %>
<%= text_field_tag :location, params[:location]%>
<br /> <br />

<%= label_tag 'Start date (Format Y-M-D 2020-03-01):' %>
<%= text_field_tag :start_date, params[:start_date]%>
<br /> <br />

<%= label_tag 'Duration in minutes (triple of 5):' %>
<%= text_field_tag :duration, params[:duration]%>
<br /> <br />

<%= label_tag 'Price in €:' %>
<%= text_field_tag :price, params[:price]%>
<br /> <br />


<%= submit_tag 'Save' %>
<% end -%>
</center>

  



